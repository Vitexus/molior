#!/usr/bin/make -f
# -*- makefile -*-
# TODO: Debian 14 Forky - Review for any new debhelper features

include /usr/share/dpkg/pkg-info.mk

export IS_SPHINX=1
export PYBUILD_NAME=molior-server
export PYBUILD_DESTDIR_python3=debian/molior-server

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_build:
	echo 'MOLIOR_VERSION = "$(DEB_VERSION)"' > molior/version.py
	dh_auto_build

override_dh_auto_test:
	flake8 molior tests pkgdata/molior-client-http/usr/lib/molior/molior-client
	# Skip tests requiring cirrina/launchy if not available in build environment
	if dpkg -l python3-cirrina >/dev/null 2>&1 && dpkg -l python3-launchy >/dev/null 2>&1; then \
		python3 -m pytest --cov=molior tests/unit; \
	else \
		echo "Skipping tests - cirrina/launchy not available in build environment"; \
	fi

override_dh_installsystemd:
	dh_installsystemd -p molior-server molior-server.service
	dh_installsystemd -p molior-vbox ssh-create-keys.service
	dh_installsystemd -p molior-node-amd64 ssh-create-keys.service
	dh_installsystemd -p molior-node-amd64-efi ssh-create-keys.service
	dh_installsystemd -p molior-node-arm64-efi ssh-create-keys.service
	dh_installsystemd -p molior-client-http molior-client-http.service